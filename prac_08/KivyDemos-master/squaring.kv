BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: ''
        Button:
            text: 'Square'
            on_press: app.handle_calculate(input_number.text)
        Label:
            id: output_label
            text: ''
            size_hint_x: None
            width: 100
            color: (1, 0, 1, 1)  # 设置为粉红色
    BoxLayout:
        orientation: 'horizontal'
        Label:
            text: 'Enter a number and press "Square"'
            size_hint_y: None
            height: 40

